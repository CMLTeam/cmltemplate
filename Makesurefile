
@options silent

@goal mvnw_update
@doc updates mvnw
  ./mvnw -N io.takari:maven:0.7.7:wrapper

@goal mysqld
@doc runs Mysql server
  docker-compose -f docker-compose-mysql.yml up

@goal mysql
@doc connects to Mysql CLI
  docker exec -it mysql8 mysql cmltemplate -ucmltemplate -pcmltemplate

@goal postgresd
@doc runs Postgresql server
  docker-compose -f docker-compose-postgresql.yml up

@goal postgres
@doc connects to Postgresql CLI
  docker exec -it postgres13 psql --username=cmltemplate --dbname=cmltemplate

@goal run
@doc runs the app
  export JAVA_HOME=~/.sdkman/candidates/java/current/
  ./mvnw spring-boot:run

@goal rabbitmq
@doc runs RabbitMQ server
  docker-compose -f docker-compose-rabbitmq.yml up

@goal test
@doc runs tests
  ./mvnw test

@goal clean
@doc cleans the project
  ./mvnw clean

@goal deps
@doc displays maven dependency updates
  ./mvnw versions:display-dependency-updates
